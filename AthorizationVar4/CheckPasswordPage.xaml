<Page x:Class="AthorizationVar4.CheckPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AthorizationVar4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CheckPasswordPage">

    <Grid Background="#009fda">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите табельный номер"/>
            <TextBox Name="inputLogin"/>
            <Label Content="Введите ФИО"/>
            <TextBox Name="inputFio" />
            <Label Content="Введите должность" />
            <TextBox Name="inputState"/>
            <Label Content="Введите дату"/>
            <TextBox Name="inputDate" />
            <Button Content="Выдать пароль" Click="CheckPassword"/>
        </StackPanel>
    </Grid>
</Page>
